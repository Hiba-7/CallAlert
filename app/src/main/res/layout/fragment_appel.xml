<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="@color/bg"
    tools:context="com.example.application2.fragments.AppelFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none"
        android:background="@color/bg">

        <LinearLayout
            android:id="@+id/topsign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Qui peut traiter le dossier"
                android:textColor="@color/black"
                android:textSize="22dp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#efefef"
            android:layoutDirection="ltr"
            android:background="@drawable/bg_rounded"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topsign"
            tools:ignore="MissingConstraints" >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:src="@drawable/justice"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/justicesite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:adjustViewBounds="false"
                android:paddingTop="20dp"
                android:scaleType="fitEnd"
                android:src="@drawable/consulter" />

            <ImageView
                android:id="@+id/justice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="200dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingLeft="20dp"
                android:scaleType="fitXY"

                android:src="@drawable/appeller" />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#efefef"
            android:layoutDirection="ltr"

            android:background="@drawable/bg_rounded"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card"
            tools:ignore="MissingConstraints" >

            <ImageView

                android:layout_width="120dp"
                android:layout_height="50dp"
                android:src="@drawable/police"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/sitepolice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:adjustViewBounds="false"
                android:paddingTop="20dp"
                android:scaleType="fitEnd"
                android:src="@drawable/consulter" />

            <ImageView
                android:id="@+id/police"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="200dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingLeft="20dp"
                android:scaleType="fitXY"

                android:src="@drawable/appeller" />





        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#efefef"
            android:layoutDirection="ltr"

            android:background="@drawable/bg_rounded"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card1"
            tools:ignore="MissingConstraints" >

            <TextView
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:text="Pompier"
                android:textSize="30dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/sitepompier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:adjustViewBounds="false"
                android:paddingTop="20dp"
                android:scaleType="fitEnd"
                android:src="@drawable/consulter" />

            <ImageView
                android:id="@+id/pompier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="200dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingLeft="20dp"
                android:scaleType="fitXY"

                android:src="@drawable/appeller" />





        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#efefef"
            android:layoutDirection="ltr"

            android:background="@drawable/bg_rounded"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card2"
            tools:ignore="MissingConstraints" >

            <ImageView
                android:id="@+id/centresite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:adjustViewBounds="false"
                android:paddingTop="20dp"
                android:scaleType="fitEnd"
                android:src="@drawable/consulter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="centres d'intérêts ouverts"
                android:textSize="30dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/centre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="200dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingLeft="20dp"
                android:scaleType="fitXY"

                android:src="@drawable/appeller" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#efefef"
            android:layoutDirection="ltr"

            android:background="@drawable/bg_rounded"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card3"
            tools:ignore="MissingConstraints" >

            <TextView
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:text="Societe civile"
                android:textSize="30dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/socitesite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:adjustViewBounds="false"
                android:paddingTop="20dp"
                android:scaleType="fitEnd"
                android:src="@drawable/consulter" />

            <ImageView
                android:id="@+id/societe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="200dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingLeft="20dp"
                android:scaleType="fitXY"

                android:src="@drawable/appeller" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#efefef"
            android:layoutDirection="ltr"
            android:background="@drawable/bg_rounded"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card4"
            tools:ignore="MissingConstraints" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personnes actives Travaillant dans le domaine de l’enfance"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                />


            <ImageView
                android:id="@+id/personne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="100dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:paddingLeft="20dp"
                android:scaleType="fitXY"

                android:src="@drawable/appeller" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
