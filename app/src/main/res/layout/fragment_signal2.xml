                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />

                <TextView
                    android:id="@+id/dangr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Danger prefere garder son identité confidentiel: Oui "
                    android:textColor="#595959"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />

                <TextView
                    android:id="@+id/titre5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="5. La position de l’enfant a-t-elle été préalablement notifié"
                    android:textAlignment="center"
                    android:textColor="#595959"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />

                <TextView
                    android:id="@+id/dscr1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="L’autorité nationale de protection et de l’enfance ethnique ."
                    android:textAlignment="center"
                    android:textColor="#595959"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />

                <TextView
                    android:id="@+id/titre6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="6. Le representant légal:"
                    android:textAlignment="center"
                    android:textColor="#595959"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="20dp">


                <Button
                    android:id="@+id/next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:backgroundTint="#4CAF50"
                    android:text="Suivant"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</ScrollView>