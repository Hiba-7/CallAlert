<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <LinearLayout
            android:scrollbars="vertical"
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layoutDirection="ltr"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/topsign"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:scrollbars="vertical"
                app:layout_constraintTop_toTopOf="@+id/topsign"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Informations"
                    android:textColor="#595959"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />


                <TextView
                    android:id="@+id/adresse2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Nom: "
                    android:textColor="#595959"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />

                <TextView
                    android:id="@+id/prenomm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Prénom: "
                    android:textColor="#595959"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />

                <TextView
                    android:id="@+id/agee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Age: "
                    android:textColor="#595959"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />


                <TextView
                    android:id="@+id/emplacement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Adresse: "
                    android:textColor="#595959"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />

                <TextView
                    android:id="@+id/titrea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="7. Situation familiale des parents"
                    android:textColor="#595959"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />

                <TextView
                    android:id="@+id/titreb"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Il sont mariés."
                    android:textColor="#595959"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />

                <TextView
                    android:id="@+id/titre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="8. Informations sur la personne recevant les risques"
                    android:textColor="#595959"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />

                <TextView
                    android:id="@+id/nom8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Nom: "
                    android:textColor="#595959"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />

                <TextView
                    android:id="@+id/prenomm8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Prénom: "
                    android:textColor="#595959"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="327dp"
                    tools:layout_editor_absoluteY="45dp" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="60dp">

                <Button
                    android:id="@+id/addinfo"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:text="Add Info"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4CAF50"
                    android:textStyle="bold"
                    android:text="Valider"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp" />


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</ScrollView>